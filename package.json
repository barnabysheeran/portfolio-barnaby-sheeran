{
  "name": "portfolio",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "preview": "vite preview",
    "dev": "vite",
    "lint": "npm run lint:tsc && npm run lint:eslint && npm run lint:stylelint",
    "lint:tsc": "tsc --noEmit --pretty false --project tsconfig.app.json",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint \"src/**/*.css\"",
    "build": "tsc -b && vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "depcruise": "depcruise --config ./tool/depcruise/config.mjs --output-type dot src | dot -T svg > ./tool/depcruise/dependencygraph.svg",
    "todo": "leasot \"src/**/*.{ts,tsx,js,jsx,css}\" || exit 0"
  },
  "dependencies": {
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.545.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@eslint/js": "^9.36.0",
    "@storybook/addon-a11y": "^10.0.2",
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/addon-onboarding": "^10.0.2",
    "@storybook/addon-vitest": "^10.0.2",
    "@storybook/react-vite": "^10.0.2",
    "@types/node": "^24.6.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/three": "^0.180.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "dependency-cruiser": "^17.0.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^10.0.2",
    "globals": "^16.4.0",
    "leasot": "^14.4.0",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "storybook": "^10.0.2",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended": "^17.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
